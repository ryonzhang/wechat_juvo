.list-item {
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom-width: 1px;
  border-bottom-color: rgba(128, 128, 128, 0.1);
  border-bottom-style: solid;
  background-color: #fff;
}

.item-main {
  display: flex;
  flex-direction: column;
  width: 100px;
}

.top-up-items {
  display: flex;
  flex-direction: row;
}

.item-main-sub {
  width: 247px;
  height: 18px;
  font-family: SFProText;
  font-size: 13px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.38;
  letter-spacing: normal;
  color: #797676;
}

.item-main-data {
  width: 247px;
  height: 22px;
  font-family: SFProText;
  font-size: 17px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.29;
  letter-spacing: -0.4px;
  color: #282e34;
}
.item-main-data-friend{
  width: 247px;
  height: 40px;
  font-family: SFProText;
  font-size: 17px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.29;
  letter-spacing: -0.4px;
  color: #282e34;
}

.item-time, .item-time-text {
  width: 78px;
  height: 21px;
  font-family: SFProText;
  font-size: 16px;
  font-weight: bold;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.31;
  letter-spacing: normal;
  text-align: right;
  color: #208389;
}

.snap {
  width: 40px;
  height: 40px;
  padding-right: 10px;
}
