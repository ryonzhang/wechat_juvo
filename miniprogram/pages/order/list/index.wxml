<import src="../../common/nav.wxml"/>
<import src="../../common/prompt.wxml"/>

<template is="nav" data="{{ navList, activeIndex }}"/>
<template is="prompt" data="{{ prompt }}"/>

<view class="scroll-list">
    <view class="weui-form-preview" wx:if="{{ !!order.paginate.total }}" wx:for="{{ order.items }}" wx:key="" data-id="{{ item._id }}">
        <view class="weui-form-preview__hd">
            <view class="weui-form-preview__item">
                <view class="weui-form-preview__label">Order Sum</view>
                <view class="weui-form-preview__date">{{ item.created_at }}</view>
                <view class="weui-form-preview__value_in-hd">$ {{ item.totalAmount }}</view>
            </view>
        </view>
        <view class="weui-form-preview__bd">
            <view class="weui-form-preview__item" wx:for="{{ item.items }}" wx:key="">
                <view class="weui-form-preview__label">{{ item.goods.name }}</view>
                <view class="weui-form-preview__value">x{{ item.total }} $ {{ item.goods.price }}</view>
            </view>
        </view>
        
    </view>
</view>